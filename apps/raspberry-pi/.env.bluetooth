# Pommai Bluetooth Audio Configuration
# Copy these settings to your .env file on the Raspberry Pi

# Force 48kHz for Bluetooth speakers (standard for BlueALSA)
PLAYBACK_SAMPLE_RATE=48000

# Use PCM16 format (uncompressed) for better compatibility
AUDIO_SEND_FORMAT=pcm16

# Increase timeouts for Bluetooth latency
AUDIO_CHUNK_TIMEOUT=10.0

# Disable early trigger to prevent overwhelming the system
EARLY_PLAYBACK_TRIGGER=false

# Optional: Force specific device indices (find with 'aplay -l')
# FORCE_OUTPUT_DEVICE_INDEX=0  # Your Bluetooth device

# Buffer tuning for Bluetooth
AUDIO_BUFFER_SIZE=8192
MIN_PLAYBACK_CHUNKS=5

# Debugging
LOG_LEVEL=INFO
