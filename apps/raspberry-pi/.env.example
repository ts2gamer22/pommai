# FastRTC Gateway Connection (Your Fly.io Deployment)
FASTRTC_GATEWAY_URL=wss://pommai-gateway.fly.dev/ws

# Device Identification
DEVICE_ID=rpi-toy-001
TOY_ID=my-first-toy

# Optional: Authentication (if you implement it later)
AUTH_TOKEN=

# Audio Configuration
AUDIO_SEND_FORMAT=opus
SAMPLE_RATE=16000
ENABLE_WAKE_WORD=false
ENABLE_OFFLINE_MODE=true

# Hardware Overrides (if needed)
# POMMAI_FORCE_OUTPUT_DEVICE_INDEX=1
# POMMAI_FORCE_INPUT_DEVICE_INDEX=0
# PLAYBACK_SAMPLE_RATE=48000

# Cache Configuration
POMMAI_CACHE_DB=/home/pi/pommai/cache/pommai_cache.db
POMMAI_CACHE_BACKUP=/home/pi/pommai/cache/backup.db

#FASTRTC_GATEWAY_URL=ws://192.168.1.2:8080  # For Ethernet
